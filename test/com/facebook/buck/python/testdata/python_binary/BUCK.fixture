genrule(
  name = 'gen',
  out = 'out',
  cmd = '$(exe :bin) > $OUT',
)

python_binary(
  name = 'bin',
  main_module = 'main',
  deps = [
    ':lib',
  ],
)

python_library(
  name = 'lib',
  srcs = [
    'main.py',
    'foo/bar/mod.py',
  ],
)

python_binary(
  name = 'bin-with-native-libs',
  main_module = 'main_with_native_libs',
  deps = [
    ':lib-with-native-libs',
  ],
)

python_library(
  name = 'lib-with-native-libs',
  srcs = [
    'main_with_native_libs.py',
  ],
  deps = [
    ':foo',
  ],
)

cxx_library(
  name = 'foo',
  srcs = [
    'foo.c',
  ],
  deps = [
    ':bar',
  ],
)

cxx_library(
  name = 'bar',
  headers = [
    'bar.h',
  ],
  srcs = [
    'bar.c',
  ],
  deps = [
    ':func',
  ],
)

cxx_library(
  name = 'func',
  headers = [
    'func.h',
  ],
  srcs = [
    'func.c',
  ],
)

python_binary(
  name = 'bin-with-extra-dep',
  main_module = 'main',
  deps = [
    ':lib',
    ':extra',
  ],
)

sh_binary(
  name = 'pex_tool',
  main = 'pex_tool.sh',
)

genrule(
  name = 'extra',
  out = 'out',
  cmd = 'touch $OUT',
)

cxx_library(
  name = 'platform_a',
  exported_preprocessor_flags = [
    '-DPLATFORM_A',
  ],
  srcs = [
    'platform_a.c',
  ],
)

cxx_library(
  name = 'platform_b',
  exported_preprocessor_flags = [
    '-DPLATFORM_B',
  ],
  srcs = [
    'platform_b.c',
  ],
)

cxx_python_extension(
  name = 'extension',
  srcs = [
    'extension.c',
  ],
)

python_binary(
  name = 'binary_with_extension_a',
  main_module = 'extension',
  platform = 'a',
  deps = [
    ':extension',
  ],
)

python_binary(
  name = 'binary_with_extension_b',
  main_module = 'extension',
  platform = 'b',
  deps = [
    ':extension',
  ],
)

python_library(
  name = 'main_module',
  srcs = [
    'main_module.py',
  ],
)

python_binary(
  name = 'main_module_bin',
  main_module = 'main_module',
  deps = [
    ':main_module',
  ],
)
