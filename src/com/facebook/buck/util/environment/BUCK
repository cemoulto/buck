PLATFORM_SRCS = [
  'Architecture.java',
  'Platform.java',
]

java_library(
  name = 'platform',
  srcs = PLATFORM_SRCS,
  autodeps = True,
  visibility = [
    'PUBLIC',
  ],
)

FILTER_SRCS = [
  'EnvironmentFilter.java',
]

java_library(
  name = 'env-filter',
  srcs = FILTER_SRCS,
  autodeps = True,
  visibility = [
    'PUBLIC',
  ],
)

java_immutables_library(
  name = 'environment',
  srcs = glob(['*.java'], excludes = FILTER_SRCS + PLATFORM_SRCS),
  immutable_types = [
    'BuildEnvironmentDescription',
  ],
  tests = [
    '//test/com/facebook/buck/util/environment:environment',
  ],
  autodeps = True,
  visibility = [
    'PUBLIC',
  ],
)
