prebuilt_jar(
  name = 'caliper',
  binary_jar = ':caliper_shaded',
  deps = [
    ':java-allocation-instrumenter',
  ],
  licenses = [
    'LICENSE.txt',
  ],
  visibility = [
    '//test/...',
  ],
)

genrule(
  name = 'caliper_shaded',
  srcs = [
    'jarjar-rules.txt',
  ],
  cmd = '$(exe //third-party/java/jarjar:jarjar) process ' \
      '$SRCDIR/jarjar-rules.txt $(location :caliper-all) $OUT',
  out = 'caliper_shaded.jar',
  licenses = [
    'LICENSE.txt',
  ],
)


prebuilt_jar(
  name = 'caliper-all',
  binary_jar = 'caliper-1.0-all.jar',
  deps = [
    ':java-allocation-instrumenter',
  ],
  licenses = [
    'LICENSE.txt',
  ],
)

